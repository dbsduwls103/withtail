<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="reviewManage">

	<sql id="where-list">
	<if test="condition=='content'">
		DBMS_LOB.INSTR(rvContent, #{keyword}) &gt; 0 
	</if>
	<if test="condition=='userName'">
		userName=#{keyword}
	</if>
	<if test="condition=='userId'">
		INSTR(r.userId, #{keyword}) = 1
	</if>
	<if test="condition=='reg_data'">
		( TO_CHAR(r.regDate, 'YYYY-MM-DD') = #{keyword}
			OR TO_CHAR(r.regDate, 'YYYYMMDD') = #{keyword} )
	</if>
</sql>
	<!-- 리뷰 개수 -->
	<select id="dataCount" parameterType="map" resultType="Integer">
		SELECT NVL(COUNT(*), 0)
		FROM review r
		JOIN member1 m ON r.userId=m.userId
		<where>
			<if test="keyword!=null and keyword!='' ">
				AND <include refid="where-list"/>
			</if>
		</where>   
	</select>
	
	<!-- 리뷰 리스트 -->
	<select id="listReviewManage" parameterType="map" resultType="com.sp.withtail.admin.reviewManage.ReviewManage">
		select rvNum,orderNum,rvContent,star,r.regDate,r.itemNum,r.userId,
        itemName, mainImage, madeby ,userName
        from review r
        join item i on r.itemNum=i.itemNum
        join member1 m on r.userId=m.userId
        <where>
			<if test="keyword!=null and keyword!='' ">
				AND <include refid="where-list"/>
			</if>
		</where>   
        ORDER BY rvNum DESC
		OFFSET #{offset} ROWS FETCH FIRST #{size} ROWS ONLY
	</select>
	

</mapper>